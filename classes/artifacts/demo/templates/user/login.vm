<!DOCTYPE html>
<!-- saved from url=(0057)http://www.layui.com/admin/std/dist/views/user/login.html -->
<html>
<head>
    <script language="javascript">
        if (window != top)
            top.location.href = location.href;
    </script>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>数据推送&接收系统</title>
    <link rel="stylesheet" href="/static/js/layuiadmin/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="/static/js/layuiadmin/style/admin.css" media="all">
    <link rel="stylesheet" href="/static/js/layuiadmin/style/login.css" media="all">
    <link id="layuicss-layer" rel="stylesheet" href="/static/js/layuiadmin/layer/layer.css" media="all">
</head>
<body layadmin-themealias="default">

<div class="layadmin-user-login layadmin-user-display-show" id="LAY-user-login" style="display: none;">

    <div class="layadmin-user-login-main">
        <div class="layadmin-user-login-box layadmin-user-login-header">
            <h2>数据推送&接收系统</h2>
        </div>
        <div class="layadmin-user-login-box layadmin-user-login-body layui-form">
            <div class="layui-form-item">
                <label class="layadmin-user-login-icon layui-icon layui-icon-username"
                       for="LAY-user-login-username"></label>
                <input type="text" name="username" id="LAY-user-login-username" lay-verify="required" placeholder="用户名"
                       class="layui-input">
            </div>
            <div class="layui-form-item">
                <label class="layadmin-user-login-icon layui-icon layui-icon-password"
                       for="LAY-user-login-password"></label>
                <input type="password" name="password" id="LAY-user-login-password" lay-verify="required"
                       placeholder="密码" class="layui-input">
            </div>
            <div class="layui-form-item">
                <div class="layui-row">
                    <div class="layui-col-xs7">
                        <label class="layadmin-user-login-icon layui-icon layui-icon-vercode"
                               for="LAY-user-login-vercode"></label>
                        <input type="text" name="checkcode" id="LAY-user-login-vercode" lay-verify="required"
                               placeholder="图形验证码" class="layui-input">
                    </div>
                    <div class="layui-col-xs5">
                        <div style="margin-left: 10px;">
                            <img src="/checkcode" onclick="this.src='/checkcode?t='+ (new Date().getTime());" class="layadmin-user-login-codeimg" id="checkcode">
                        </div>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <button class="layui-btn layui-btn-fluid" lay-submit="" id="LAY-user-login-submit" lay-filter="LAY-user-login-submit">登 录</button>
            </div>

        </div>
    </div>

</div>

<script src="/static/js/layuiadmin/layui/layui.js" type="text/javascript" charset="utf-8"></script>
<script>
    layui.config({
        base: '/static/js/layuiadmin/' //静态资源所在路径
    }).extend({
        index: 'lib/index' //主入口模块
    }).use(['index', 'user'], function () {

        document.onkeydown = function(e){
            var ev = document.all ? window.event : e;
            if(ev.keyCode==13) {
                $('#LAY-user-login-submit').click();
            }
        }

        var $ = layui.jquery
                , admin = layui.admin
                , form = layui.form
                , layer = layui.layer;

        //监听提交
        form.on('submit(LAY-user-login-submit)', function (data) {
            $.ajax({
                type: "post",
                url: "/login",
                dataType: 'json',
                data: data.field,
                success: function (result) {
                    if (result.status == "success") {
                        location.href = '/manage/index'; //后台主页
                    } else {
                        layer.msg(result.msg, {
                            offset: '15px'
                            , icon: 2
                            , time: 1000
                        });
                        $('#checkcode').click();
                    }

                }, error: function (e) {
                    //登入成功的提示与跳转
                    layer.msg('登录失败', {
                        offset: '15px'
                        , icon: 2
                        , time: 1000
                    });
                    $('#checkcode').click();
                }
            });
        });
    });
</script>
</body>
</html>